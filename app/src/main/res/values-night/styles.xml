    <!--Main Toolbar-->
    <style name="Main.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <!--Buttons-->
    <style name="Widget.RemindMe.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>

    <!--Text Button-->
    <style name="Widget.RemindMe.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--Text Fields-->
    <style name="RemindMe.TextInputEditText.Filledbox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxBackgroundColor">@color/background</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!--FAB-->
    <style name="RemindMe.FAB" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="iconTint">?android:attr/textColorPrimary</item>
    </style>

    <!--Fragment-->
    <style name="RemindMe.Fragment" parent="Theme.RemindMe">
        <item name="android:background">@color/background</item>

    </style>

    <!--Edit Fragment-->
    <style name="RemindMe.Fragment.Edit" parent="Theme.RemindMe">
        <item name="android:background">@color/background</item>
        <item name="android:windowEnterTransition">@anim/slide_up</item>
        <item name="android:windowExitTransition">@anim/slide_down</item>

    </style>

    <!--Alert Dialog-->
    <style name="RemindMe.AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">?android:attr/textColorPrimary</item>
        <item name="colorAccent">?android:attr/textColorPrimary</item>
        <!--<item name="colorError">@color/error</item>-->
        <item name="actionBarSize">@dimen/mtrl_toolbar_default_height</item>
        <item name="minTouchTargetSize">@dimen/mtrl_min_touch_target_size</item>
    </style>

    <!--Animation New Reminder via FAB-->
    <style name="RemindMe.Animation" parent="Theme.RemindMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>

